<div class="form-login">
	<h1>Reset Password</h1>

	<p id="notice"><%= notice %></p>

	<%= form_tag password_resets_path, :method => :post do %>
		<div class="field">
		    <%= label_tag :email %>
		    <%= text_field_tag :email, params[:email], :class => 'form-control', required: true %>
		</div>
		<div class="actions"><%= submit_tag "Send", :class => 'btn btn-primary' %></div>
	<% end %>

</div>


