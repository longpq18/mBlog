<div class="posts">
  <% @posts.each do |post| %>
 	<div class="posts-details list">
        <div class="post-1">
            <div class="img">
                <%= image_tag post.image.url %>
            </div> 
            <div class="post-detail-content">
                <h3 class="name" ><%= link_to post.name.first(40), post %></h3>
                <h4 class="category"><span>in</span> <%= link_to post.category.name, category_path(post.category.id) %></h4>
                <p class="content"><%= raw post.content.first(80) %>...</p>
                <p>
		          Tags: <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
		        </p>
                <p class="readmore"><%= link_to 'Read more', post %></p>
            </div>
        </div>
    </div>
  <% end %>

  <p><%= will_paginate %></p>
</div>