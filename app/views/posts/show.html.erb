<div class="post-detail">
  <p id="notice"><%= notice %></p>

  <h3><%= @post.name %></h3>
  <p>
  	<span>Author :</span> <%= @post.user.uname %> | 
  	<span>In </span><%= link_to @post.category.name, category_path(@post.category.id) %>
  </p>
  <p>
    <%= raw @post.content %>
  </p>

    <% if current_user && @post.user == current_user %>
		<%= link_to 'Edit', edit_post_path(@post) %>
	<% end %>
</div>
